<div class="ui menu">
  <div class="item">
    Product List
  </div>
  <div class="right menu">
    <div class="item">
      <div class="ui left icon input">
        <i class="search icon"></i>
        <input id="searchInput" type="text" placeholder="Search" onkeyup="searchTable()">
      </div>
    </div>
  </div>
</div>

<table class="ui striped table">
  <thead>
    <tr>
      <th>SKU</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>MSRP</th>
      <th>MAP</th>
    </tr>
  </thead>
  <tbody id="productTable">
    {{#each payload}}
    <tr>
      <td>{{this.sku}}</li>
      <td>{{this.brand}}</li>
      <td>{{this.model}}</li>
      <td>{{this.product_desc}}</li>
      <td>{{this.msrp}}</li>
      <td>{{this.map}}</li>
    </tr>
    {{/each}}
  </tbody>
</table>