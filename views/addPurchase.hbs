<h4 class="ui dividing header">Inventory Purchase</h4>

<div class="ui form" id="purchaseForm">
  <div class="fields">
    <div class="field">
      <label>Date</label>
      <div class="ui calendar" id="example1">
        <div class="ui input left icon">
          <i class="calendar icon"></i>
          <input type="text" placeholder="Date/Time">
        </div>
      </div>
    </div>
    <div class="field">
      <label>Supplier</label>
      <div class="ui fluid search selection dropdown">
        <input type="hidden" name="supplier">
        <i class="dropdown icon"></i>
        <div class="default text">Select Supplier</div>
        <div class="menu">
          <div class="item">Citymusic</div>
          <div class="item">Yamaha</div>
          <div class="item">Ranking</div>
          <div class="item">Swee Lee</div>
          <div class="item">Gruv Gear</div>
          <div class="item">Enya</div>
          <div class="item">Vines</div>
        </div>
      </div>
    </div>
    <div class="field">
      <label>Invoice Number</label>
      <input type="text" placeholder="SA31123">
    </div>
    <div class="field">
    </div>
  </div>
{{!-- </div> --}}

<button class="ui button" onclick="$('.modal').modal('show');">Add items</button>
<button class="ui button" onclick="fake()">Fake add</button>
  &nbsp;
<div class="ui toggle checkbox">
  <input type="checkbox" value="true" name="credit_purchase" tabindex="1" class="active" checked>
  <label>Credit</label>
</div>

<table class="ui striped table">
  <thead>
    <tr>
      <th></th>
      <th>No:</th>
      <th>SKU</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Qty</th>
      <th>Unit Cost</th>
      <th>
        </td>Sub-Total</th>
    </tr>
  </thead>
  <tbody id="invoice">
    {{!-- New Rows get added here --}}
  </tbody>
  <tfoot class="full-width">
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th>Total: </th>
      <th id="total" class="right aligned collapsing"></th>
    </tr>
  </tfoot>
</table>

<button class="ui button" onclick="submitForm()">Submit</button>
</div>

<div class="ui scrolling modal">
  <div class="scrolling content">
    <div class="ui menu">
      <div class="item">
        Product List
      </div>
      <div class="right menu">
        <div class="item">
          <div class="ui left icon input">
            <i class="search icon"></i>
            <input class="focus" id="searchInput" type="text" placeholder="Search" onkeyup="searchTable()">
          </div>
        </div>
      </div>
    </div>
    <div id="scroll">
      <table class="ui striped compact small table">
        <thead>
          <tr>
            <th>SKU</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Description</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="productTable">
          {{#each products}}
          <tr>
            <td>{{this.sku}}</td>
            <td>{{this.brand}}</td>
            <td>{{this.model}}</td>
            <td>{{this.product_desc}}</td>
            <td><button onclick="$('.modal').modal('hide');">Add</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>