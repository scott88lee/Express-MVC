<h4 class="ui dividing header">Product list</h4>
<div class="ui accordion">
  <div class="title">
    <div class="ui menu">
      <div class="item">
        Add Product<i class="dropdown icon"></i>
      </div>
      <div class="right menu">
        <div class="item">
          <div class="ui left icon input">
            <i class="search icon"></i>
            <input id="searchInput" type="text" placeholder="Search" onkeyup="searchTable()">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="ui segment">

    <form class="ui form" action="/products/new" method="post">
      <h4 class="ui dividing header">Add new product</h4>
        <div class="three fields">
          <div class="field">
            <label>SKU</label>
            <input class="focus" type="text" name="sku" tabindex="1" placeholder="UPC8838B" required>
          </div>
          <div class="field">
            <label>Main Category</label>
            <div class="ui selection dropdown">
              <input type="hidden" name="cat">
              <i class="dropdown icon"></i>
              <div class="default text">Category</div>
              <div class="menu">
                <div class="item" data-ref="ag" data-value="acoustic">Acoustic</div>
                <div class="item" data-ref="eg" data-value="electric">Electric</div>
                <div class="item" data-ref="uk" data-value="electric">Ukulele</div>
                <div class="item" data-ref="pa" data-value="proaudio">Pro-Audio</div>
                <div class="item" data-ref="ac" data-value="accessories">Accessories</div>
                <div class="item" data-ref="kb" data-value="keyboard">Keyboard</div>
                <div class="item" data-ref="dr" data-value="drums">Drums</div>
                <div class="item" data-ref="sv" data-value="services">Services</div>
              </div>
            </div>
          </div>
          <div class="field">
            <label>&nbsp;</label>
            <div class="ui toggle checkbox" style="margin-top:8px">
              <input type="checkbox" value="true" name="physical_item" tabindex="1" class="active" checked>
              <label>Physical item</label>
            </div>
          </div>
        </div>
        <div class="three fields">
          <div class="field">
            <label>Brand</label>
            <input type="text" name="brand" tabindex="1" placeholder="Yamaha" required>
          </div>
          <div class="field">
            <label>Model</label>
            <input type="text" name="model" tabindex="1" placeholder="THR10-II Wireless" required>
          </div>
          <div class="field">
            <label>S$ MSRP</label>
            <input type="number" min="0.01" step="0.01" name="msrp" tabindex="1" placeholder="599" required>
          </div>
          <div class="field">
            <label>S$ MAP</label>
            <input type="number" min="0.01" step="0.01" name="map" tabindex="1" placeholder="539.50" required>
          </div>
        </div>
      
      <div class="field">
        <label>Product Description</label>
        <div class="field">
          <input type="text" name="product_desc" tabindex="1"
            placeholder="20W Portable Desktop amplifire with wireless reciever" required>
        </div>
      </div>
      <button class="ui button" tabindex="1">Add Product</button>
      
    </form>
  </div>
</div>
    </div>
<table class="ui striped compact small table">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>SKU</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>MSRP</th>
      <th>MAP</th>
    </tr>
  </thead>
  <tbody id="productTable">
    {{#each payload}}
    <tr>
      <td><a href="/products/{{this.product_id}}/edit"><i class="edit icon"></i></a></td>
      <td>{{this.sku}}</li>
      <td>{{this.brand}}</li>
      <td>{{this.model}}</li>
      <td>{{this.product_desc}}</li>
      <td>{{this.msrp}}</li>
      <td>{{this.map}}</li>
    </tr>
    {{/each}}
  </tbody>
</table>